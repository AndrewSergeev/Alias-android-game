<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="mainnotitle" parent="AppTheme">
        <item name="android:textColor">@color/darkdark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/darkdark</item>
        <item name="colorPrimaryDark">@color/darkdark</item>
        <item name="colorAccent">@color/darkdark</item>
    </style>

    <style name="generalnotitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="withDarkMenu" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">#1e8dc1</item>
        <item name="colorPrimary">#1e8dc1</item>

    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
    </style>



</resources>
